{
    "exclude": ["dist", "node_modules"],
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["ES2020"],
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "Node",
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
